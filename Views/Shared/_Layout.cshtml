<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio Website</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">

    <!-- FontAwesome icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <!-- Bootstrap 5.1.0 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.typekit.net/rep6leg.css">


    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" id="main-page">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">My Portfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Projects", "Home")">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-center py-3">
        <div class="container">
            <p class="connect-with-me">Connect with me:</p>
            <div class="social-icons">
                <a href="https://github.com/yourusername" target="_blank" class="me-3"><i class="fab fa-github fa-2x"></i></a>
                <a href="https://twitter.com/yourusername" target="_blank" class="me-3"><i class="fab fa-twitter fa-2x"></i></a>
                <a href="https://www.instagram.com/yourusername" target="_blank" class="me-3"><i class="fab fa-instagram fa-2x"></i></a>
                <a href="https://www.behance.net/yourusername" target="_blank" class="me-3"><i class="fab fa-behance fa-2x"></i></a>
            </div>
            <p class="copy-portfolio">&copy; 2024 My Portfolio</p>
        </div>
    </footer>
<!-- Include Bootstrap dependencies -->

<!-- Include Bootstrap dependencies -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>




</body>
</html>
